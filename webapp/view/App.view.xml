<mvc:View
   controllerName="ui5.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
   <!-- Shell 컨트롤을 사용하여 애플리케이션의 레이아웃을 정의합니다. -->
   <Shell>
        <!-- App 컨트롤은 애플리케이션의 루트 컨테이너 역할을 합니다. -->
        <App 
            class="myAppDemoWT"  
            id="app"              
        />
        
     
   </Shell>
</mvc:View>

